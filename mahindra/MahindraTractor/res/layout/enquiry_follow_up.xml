<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:scaleType="fitXY"
        android:src="@drawable/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#84D327" >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#6BB019"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/collapse" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Enquiry Follow up"
            android:textColor="#ffffff"
            android:textSize="22dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/createEnquireForm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:text="Enquiry - 5567"
                android:textColor="#FF1C3E"
                android:textStyle="bold"
                android:background="@drawable/text_field"
                android:textSize="16sp" />
            <include
                android:id="@+id/interestedModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                layout="@layout/dropdown_view" />
             <EditText
                android:id="@+id/purchaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_field"
                android:drawableLeft="@drawable/e_date_icon"
                android:drawablePadding="10dp"
                android:hint="Expected Purchase Date"
                android:inputType="textNoSuggestions"
                android:maxLength="30"
                android:padding="5dp"
                android:textColor="#FF1C3E"
                android:textColorHint="#88FF1c3E" />
             <EditText
                android:id="@+id/nextVisitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_field"
                android:drawableLeft="@drawable/e_date_icon"
                android:drawablePadding="10dp"
                android:hint="Next Visit Date"
                android:inputType="textNoSuggestions"
                android:maxLength="30"
                android:padding="5dp"
                android:textColor="#FF1C3E"
                android:textColorHint="#88FF1c3E" />
        </LinearLayout>
    </ScrollView>
   
    <ImageButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/submit_selector" />

</LinearLayout>